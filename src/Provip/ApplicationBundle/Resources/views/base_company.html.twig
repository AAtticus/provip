{% extends "ProvipApplicationBundle::base.html.twig" %}


{% block nav %}
<ul class="nav" data-spy="affix" data-offset-top="50">
    <li><a href="{{ path('provip_application_company_dashboard') }}"><i class="icon-dashboard icon-xlarge"></i>Dashboard</a></li>
    <li><a class="first_element_to_target" href="{{ path('provip_application_marketplace_companymarketplace') }}"><i class="icon-briefcase icon-xlarge"></i>Marketplace</a></li>
    <li><a class="second_element_to_target" href="{{ path('provip_application_internship_companyinternships') }}"><i class="icon-road icon-xlarge"></i>My Interns</a></li>
    {% if is_granted('ROLE_COMPANY_STAFF_ADMIN') %}
    <li><a class="third_element_to_target" href="{{ path('provip_application_company_info') }}"><i class="icon-building icon-xlarge"></i>Company</a></li>
    <li><a class="fourth_element_to_target" href="{{ path('provip_application_company_staff') }}"><i class="icon-group icon-xlarge"></i>Staff</a></li>
    <li><a class="fifth_element_to_target" href="{{ path('provip_application_opportunity_index') }}"><i class="icon-tag icon-xlarge"></i>Opportunities</a></li>
    {% endif %}
    <li class="sixt_element_to_target"><a href="{{ path('provip_application_company_settings') }}"><i class="icon-cog icon-xlarge"></i>Settings</a></li>
</ul>
{% endblock %}

{% block user_menu %}
    <ul class="dropdown-menu">
        <li><a href="{{ path('provip_application_company_settings') }}">Settings</a></li>
        <li class="divider"></li>
        <li><a href="{{ path('provip_application_default_companydocumentation') }}">Help</a></li>
        <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
    </ul>
{% endblock %}

{% block modal %}

    <!-- .modal -->
    <div id="new-company-update" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="icon-remove"></i></button>
                    <h4 class="modal-title" id="myModalLabel">Status Update</h4>
                </div>

                <div class="modal-body">

                    <div class="errors">

                    </div>

                    <p class="text-small">This will be visible for all current interns and company staff members</p>

                    <form class="form-horizontal company-update-form" method="POST">

                        <div class="activity-update-form">

                        </div>

                    </form>


                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-small btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-small btn-primary company-activity-update">Post</button>
                </div>
            </div><!-- /.modal-content -->
        </div>
    </div>

    <!-- / .modal -->
{% endblock %}