<article id="comment-id-{{ e.id }}" class="comment-item media arrow-left">
    <a class="pull-left thumb-small avatar">
        {% if e.author.picture %}
            <img src="{{(e.author.picture.getWebPath) | imagine_filter('thumbnail')  }}" alt="{{ e.author }}" class="img-circle" />
        {% else %}
            <img src="{{ asset('bundles/provipapplication/images/default-user-icon-profile.png') }}" alt="{{ e.author }}" class="img-circle" />
        {% endif %}
    </a>
    <section class="media-body panel">
        <header class="panel-heading clearfix">
            <a href="#">{{ e.author }}</a><label class="label bg-info m-l-mini">You</label> <span class="text-muted m-l-small pull-right"><i class="icon-time"></i>{{ e.created | date("d M Y H:i:s") }}</span>
        </header>
        <div>{{ e.message }}</div>

    </section>
</article>