

<section id="content">
    <div class="row">
        <div class="col col-lg-4 col-offset-4 m-t-large">
            <section class="panel">
                <header class="panel-heading text-center">
                    Change your password
                </header>
                <form style="padding: 25px" action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">

                    {{ form_errors(form) }}

                    <div class="block {% if form.current_password.vars.errors|length %} has-error {% endif %} ">
                        <label for="" class="required">Current password:</label>
                        {{ form_widget(form.current_password, { 'attr': {'placeholder': 'Password'} }) }}
                        {{ form_errors(form.current_password) }}
                    </div>

                    <div class="block {% if form.plainPassword.first.vars.errors|length %} has-error {% endif %} ">
                        <label for="pathway_student_registration_plainpassword_first" class="required">Choose a new password:</label>
                        {{ form_widget(form.plainPassword.first, { 'attr': {'placeholder': 'Password'} }) }}
                        {{ form_errors(form.plainPassword.first) }}
                    </div>

                    <div class="block {% if form.plainPassword.second.vars.errors|length %} has-error {% endif %}">
                        <label for="pathway_student_registration_plainpassword_second" class="required">Confirm your new password:</label>
                        {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder': 'Confirm your password'} }) }}
                        {{ form_errors(form.plainPassword.second) }}
                    </div>
                    {{ form_rest(form) }}
                    <div>
                        <input class="btn btn-primary" type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
                    </div>
                </form>
            </section>
        </div>
    </div>
</section>

